<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<DialogPane xmlns:fx="http://javafx.com/fxml">
    <content>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Product Sales Statistics" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <TableView fx:id="statsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="120"/>
                    <TableColumn fx:id="variantColumn" text="Variant" prefWidth="150"/>
                    <TableColumn fx:id="quantityColumn" text="Quantity Sold" prefWidth="100"/>
                    <TableColumn fx:id="totalColumn" text="Total Sales" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </content>
    <buttonTypes>
        <ButtonType fx:constant="CLOSE"/>
    </buttonTypes>
</DialogPane>