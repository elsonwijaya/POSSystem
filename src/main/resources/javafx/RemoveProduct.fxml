<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="javafx.controller.RemoveProductController">
    <VBox alignment="CENTER" spacing="10"
          AnchorPane.leftAnchor="50"
          AnchorPane.rightAnchor="50"
          AnchorPane.topAnchor="50"
          AnchorPane.bottomAnchor="50">

        <!-- ComboBox for selecting the product to remove -->
        <ComboBox fx:id="productComboBox" promptText="Select Product to Remove" prefWidth="300" prefHeight="40" minWidth="300" maxWidth="300" />

        <!-- Button to confirm removal of the selected product -->
        <Button text="Remove Product" onAction="#handleRemoveProduct" prefWidth="300" prefHeight="50" />

        <!-- Status label to display feedback -->
        <Label fx:id="statusLabel" />

        <!-- Back button to return to the main screen -->
        <Button text="Back" fx:id="backButton" onAction="#handleBack" prefWidth="300" prefHeight="50" />
    </VBox>
</AnchorPane>
